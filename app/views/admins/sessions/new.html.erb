<div class="row justify-content-center">

  <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                  <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                  <div class="col-lg-6">
                      <div class="p-5">
                          <div class="text-center">
                              <h1 class="h4 text-gray-900 mb-4">Log in - Administrativo</h1>
                          </div>
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                              
                              <div class="form-group"> 
                                <%= f.email_field :email, autofocus: true, placeholder:"Enter Email Address...", class:"form-control form-control-user" %>
                              </div>

                              <div class="form-group">
                                <%= f.password_field :password, placeholder:"Password", class:"form-control form-control-user" %>
                              </div>

                              <% if devise_mapping.rememberable? %>
                                  <%= f.check_box :remember_me %> Lembre-Me
                              <% end %>

                              <%= f.submit "Entrar", class:"btn btn-primary btn-user btn-block" %>
                          <% end %>
                      </div>
                  </div>
              </div>
          </div>
      </div>

  </div>

</div>