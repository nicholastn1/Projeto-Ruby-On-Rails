<%#= @admin.inspect %>
<% if @admin.errors.any?  %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <ul>
        <% @admin.errors.full_messages.each do |message|%>
        <li> <%= message %> </li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="col-lg-8">

    <div class="card shadow mb-4">

        <div class="card-header">
            <h1 class="h3 mb-2 text-gray-800"><%= @admin.model_name.human %></h1>
        </div>

        <div class="card-body">

            <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>

                <div class="form-group">
                    <%= form.label :email %>
                    <%= form.text_field :email, class:"form-control", placeholder: t('placeholder.admin_email') %>
                </div>

                <div class="form-group">
                    <%= form.label :password %>
                    <%= form.password_field :password, class:"form-control", placeholder: t('placeholder.admin_password') %>
                </div>

                <div class="form-group">
                    <%= form.label :password_confirmation %>
                    <%= form.password_field :password_confirmation, class:"form-control", placeholder: t('placeholder.admin_password_confirmation') %>
                </div>
                
                <div class="my-2"></div>
                
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text"> <%= t('button.save') %> </span>
                </button>
            <% end %>
        </div>
    </div>
</div>