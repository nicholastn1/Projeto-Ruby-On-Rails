<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Lista de Administradores</h1>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>
                    <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
            <tr>
                <td><%= admin.id %></td>
                <td><%= admin.email %></td>
                <td style="width: 110px">
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                        <i class="fas fa-edit"></i>
                    <% end %>

                    <%= link_to admins_backoffice_admin_path(admin), class:"btn btn-danger btn-circle", method: :delete, data: { confirm: "Deseja realmente excluir este administrador?"} do %>
                        <i class="fas fa-trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="text-center">
        <%= paginate @admins %>
    </div>
    
</div>
