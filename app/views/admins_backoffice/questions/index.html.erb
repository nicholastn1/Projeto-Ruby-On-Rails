<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 60px">#</th>
                <th style="width: 500px"><%= translate_attribute(@questions, :description) %></th>
                <th style="width: 200px"><%= translate_attribute(@questions, :subject) %></th>
                <th>
                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
            <tr>
                <td><%= question.id %></td>
                <td><%= question.description.truncate(80) %></td>
                <td><%= question.subject.description.truncate(30) %></td>
                <td style="width: 110px">
                    <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
                        <i class="fas fa-edit"></i>
                    <% end %>

                    <%= link_to admins_backoffice_question_path(question), class:"btn btn-danger btn-circle", method: :delete, 
                        data: { confirm: t('message.confirm_with', item: question.description.truncate(20))} do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <%= paginate @questions %>
    </div>
    
</div>
